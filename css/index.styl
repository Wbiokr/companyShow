#fp-nav ul li a span, .fp-slidesNav ul li a span
  background #333
*
  margin 0 
  padding 0
.section
  background #000
  position relative
  img
    height 100%
    width 110%
    filter brightness(120%)
    // opacity 0.7
.s4
  section
    position absolute
    top 0 
    left 0
    width 100%
    height 100%
    padding 40px 20px
    box-sizing border-box
    display flex
    justify-content center
    align-items center
    >div
      box-shadow 0 0 20px -4px rgba(250,250,250,.7)
      border-radius 10px
      border 1px solid #666
      background rgba(0,0,0,.65)
      color #ca6
      padding 40px 25px
      >h3
        border-bottom 1px solid #eee
        text-align center
        line-height 38px
        font-size 20px
      >ul
        list-style none
        padding 20px 0
        li
          line-height 40px
          font-size 16px
          span
            margin 0 10px
      >p
        text-align center
        border-top 1px solid #eee
        line-height 46px
        font-size 18px